<div class="container p-4" style="margin-top:70px;">
    <h3 class="text-center text-uppercase">Listado de Categorías</h3>
    <div class="d-flex justify-content-start mb-3">
        <a href="/categoria/add" class="btn btn-danger">Nueva Categoría</a>
    </div>
    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.descripcion}}</td>
                <td>
                    <a href="/categoria/edit/{{this.id}}" class="btn btn-warning btn-sm">Actualizar</a>
                    <form action="/categoria/delete/{{this.id}}" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
            <!-- Dato de prueba -->
            <tr>
                <td>Electrónica</td>
                <td>Dispositivos y accesorios electrónicos</td>
                <td>
                    <a href="/categoria/edit/1" class="btn btn-warning btn-sm">Actualizar</a>
                    <form action="/categoria/delete/1" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

