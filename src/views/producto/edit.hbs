<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/producto/edit/{{producto.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="nombreProducto" class="input-group-text">Nombre</label>
                            <input type="text" id="nombreProducto" name="nombre" class="form-control" placeholder="Nombre" value="{{producto.nombre}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="categoriaProducto" class="input-group-text">Categoría</label>
                            <input type="text" id="categoriaProducto" name="categoria" class="form-control" placeholder="Categoría" value="{{producto.categoria}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="precioProducto" class="input-group-text">Precio</label>
                            <input type="number" id="precioProducto" name="precio" class="form-control" placeholder="Precio" value="{{producto.precio}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="stockProducto" class="input-group-text">Stock</label>
                            <input type="number" id="stockProducto" name="stock" class="form-control" placeholder="Stock" value="{{producto.stock}}" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button type="submit" class="btn btn-success">Actualizar</button>
                            <a href="/producto" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

